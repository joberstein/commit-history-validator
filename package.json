{
  "name": "@joberstein12/commit-history-validator",
  "version": "1.0.0",
  "description": "Validates commits and release according to the conventional commit specification.",
  "author": "Jesse Oberstein",
  "license": "ISC",
  "repository": "https://github.com/joberstein/commit-history-validator",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn clean && babel src --out-dir dist",
    "clean": "rm -rf dist",
    "release": "semantic-release",
    "hooks:setup": "node dist/index.js hooks setup",
    "hooks:run": "node dist/index.js hooks run",
    "test": "jest",
    "validate:commits": "node dist/index.js validate commits",
    "validate:release": "node dist/index.js validate release"
  },
  "keywords": [
    "conventional-commits",
    "commit-history",
    "semver",
    "release"
  ],
  "dependencies": {
    "command-line-args": "^5.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/format": "^17.0.0",
    "@commitlint/types": "^17.0.0",
    "@jest/globals": "^28.1.2",
    "@types/jest": "28.1.3",
    "@types/node": "^18.0.0",
    "commitlint": "^17.0.3",
    "jest": "^28.1.1",
    "semantic-release": "^19.0.3"
  }
}
